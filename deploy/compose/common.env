# Common environment sample
POSTGRES_DB=sam
POSTGRES_USER=sam
POSTGRES_PASSWORD=sam
DATABASE_URL=postgresql+asyncpg://sam:sam@postgres:5432/sam
REDIS_URL=redis://redis:6379/0

# MinIO configuration
MINIO_ENDPOINT=http://minio:9000                                                                   
MINIO_ACCESS_KEY=minioadmin                                                                        
MINIO_SECRET_KEY=minioadmin                                                                        

# Keycloak configuration
KEYCLOAK_SERVER_URL=http://keycloak:8080
KEYCLOAK_REALM=towerco
KEYCLOAK_CLIENT_ID=towerco-aiops
KEYCLOAK_CLIENT_SECRET=your-client-secret
KEYCLOAK_ADMIN_CLIENT_ID=towerco-api
KEYCLOAK_ADMIN_CLIENT_SECRET=your-admin-client-secret

# Authentication mode
AUTH_MODE=keycloak  # Options: simple, keycloak, none

# Fallback JWT for development
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Kafka configuration
KAFKA_BROKER=kafka:9092
KAFKA_BROKERS=kafka:9092

# Application configuration
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
